{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run FBA (Current File)",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "dotnet",
            "runtimeArgs": [
                "run",
                "${file}"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            }
        }
    ]
}